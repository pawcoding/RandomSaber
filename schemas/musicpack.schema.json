{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://randomsaber.pawcode.de/schemas/musicpack.schema.json",
  "title": "Music-Pack",
  "description": "A music-pack for RandomSaber website",
  "type": "object",
  "properties": {
    "title": {
      "description": "The title of the music-pack",
      "type": "string"
    },
    "type": {
      "description": "'ost' or 'additive' pack",
      "type": "string"
    },
    "levels": {
      "description": "List of all levels in this music-pack",
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "description": "Level in a music-pack",
        "$ref": "https://randomsaber.pawcode.de/schemas/level.schema.json"
      }
    }
  },
  "required": ["title", "type", "levels"]
}